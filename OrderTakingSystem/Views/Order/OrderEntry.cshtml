@using OrderTakingSystem.Models

@model OrderTakingSystem.Models.Order

@{
    ViewData["Title"] = "Customer Order";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ProcessOrder" method="post">
    <div class="form-group">
        <label for="OrderAmount">Order Amount</label>
        <input type="number" class="form-control" id="OrderAmount" name="OrderAmount" required="required" min="0" step="0.01" placeholder="Enter Order Amount" />
    </div>

    <div class="form-group">
        <label for="CustomerType">Customer Type</label>
        <select class="form-control" id="CustomerType" name="CustomerType" required="required">
            <option value="New">New</option>
            <option value="Loyal">Loyal</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
