@using OrderTakingSystem.Models

@model OrderTakingSystem.Models.Order

@{
    ViewData["Title"] = "Order Results";
}

<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <label>Order Amount:</label>
    <p>@Model.OrderAmount.ToString("C")</p>
</div>

<div class="form-group">
    <label>Customer Type:</label>
    <p>@Model.CustomerType</p>
</div>

<div class="form-group">
    <label>Discount Applied:</label>
    <p>@Model.Discount.ToString("C")</p>
</div>

<div class="form-group">
    <label>Total Amount:</label>
    <p>@Model.TotalAmount.ToString("C")</p>
</div>

<a href="@Url.Action("OrderEntry")" class="btn btn-primary">Back to Order Entry</a>
